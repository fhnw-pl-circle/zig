{
	"name": "Zig-Playground-Alpine",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Alpine version: 3.13, 3.14, 3.15, 3.16
		"args": {
			"VARIANT": "3.16"
		}
	},
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"ziglang.vscode-zig"
			]
		}
	}
}
